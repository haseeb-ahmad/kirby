- content_for(:header_actions) do
  - if @media_folders.any?
    = link_to '#', class: 'button organize-switch', data: {organize_images: t('kirby.photos.organize'), done_organizing: t('kirby.photos.done_organizing')} do
      = icon('random')
      = t('kirby.photos.organize')

  = link_to new_admin_media_folder_path, class: 'button button-primary', style: 'margin-right: 0; margin-left: 4px', data: {remote: true} do
    = icon('plus')
    =t 'kirby.photos.new_folder'

.gallery-container
  .gallery
    .item.new-image-form
      = render 'form'

    = render partial: 'kirby/admin/media_folders/media_folder', collection: @media_folders

    .gallery-prepend-image
      .infinite-scroll
        = render partial: 'kirby/admin/images/image', collection: @images

      .infinite-pagination= link_to_next_page @images, 'Next', remote: true
