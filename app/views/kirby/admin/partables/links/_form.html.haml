.horizontal-form-label
  = f.object.title
= f.fields_for :partable, f.object.partable do |ff|
  .horizontal-form-content
    .select-dropdown
      = ff.select :page_id, Kirby::Page.live.map {|o| [o.title, o.id]}, prompt: true
    .horizontal-form-content
      = ff.text_field :title, placeholder: "#{t 'kirby.pages.page_part'} #{f.object.name.downcase}"
